        <TextBox x:Name="CmdLine" TextWrapping="Wrap" Background="Black" CaretBrush="Green" Foreground="Green" PreviewKeyDown="CmdLine_PreviewKeyDown" KeyUp="CmdLine_KeyUp" VerticalContentAlignment="Top" FontFamily="Calibri" Padding="8,8,8,3"  />
    </Grid>
</UserControl>
